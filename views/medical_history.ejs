<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical History</title>
    <link rel="stylesheet" href="/css/medical_history.css">
</head>
<body>
    <!-- Include the patient navbar -->
    <%- include('partials/patientNavbar.ejs') %>
    <div class="container">
        <h1>Medical History</h1>

        <% if (error && error.length > 0) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <table>
            <thead>
                <tr>
                    <th>Prescribed Date</th>
                    <th>Diagnosis</th>
                    <th>Doctor Name</th>
                    <th>Doctor's Instructions</th>
                    <th>Prescription</th>
                    <th>Attachments</th>
                </tr>
            </thead>
            <tbody>
                <% if (locals.prescriptions && prescriptions.length > 0) { %>
                    <% prescriptions.forEach(prescription => { %>
                        <tr>
                            <td><%= new Date(prescription.date).toLocaleDateString() %></td>
                            <td><%= prescription.diagnosis %></td>
                            <td><%= prescription.doctorname %> (<%= prescription.specialization %>)</td>
                            <td><%= prescription.instruction %></td>
                            <td class="actions"><a href="/student/view-prescription/<%= prescription.prescriptionid %>">View</a></td>
                            <td class="actions"><a href="/student/view-attachments/<%= prescription.prescriptionid %>">View</a></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="no-records">No prescription history found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>