<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor's Prescription History</title>
    <link rel="stylesheet" href="/css/doctorMedicalHistory.css">
</head>
<body>
    <!-- nav -->
    <%- include('partials/doctorNavbar.ejs') %>
    <div class="container">
        <h1>Doctor's Prescription History</h1>

        <% if (error && error.length > 0) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <table>
            <thead>
                <tr>
                    <th>Prescribed Date</th>
                    <th>Patient Name</th>
                    <th>Diagnosis</th>
                    <th>Instructions</th>
                    <th>Prescription</th>
                    <th>Attachments</th>
                </tr>
            </thead>
            <tbody>
                <% if (locals.prescriptions && prescriptions.length > 0) { %>
                    <% prescriptions.forEach(prescription => { %>
                        <tr>
                            <td><%= new Date(prescription.date).toLocaleDateString() %></td>
                            <td><%= prescription.patientname %></td>
                            <td><%= prescription.diagnosis %></td>
                            <td><%= prescription.instruction %></td>
                            <td class="actions"><a href="/doctor/view-prescription/<%= prescription.prescriptionid %>">View</a></td>
                            <td class="actions"><a href="/doctor/view-attachments/<%= prescription.prescriptionid %>">View</a></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="no-records">No prescription history found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script>
        function viewPrescription() {
            alert('Viewing Prescription');
        }
        
        function viewAttachments() {
            alert('Viewing Attachments');
        }
    </script>
</body>
</html>
