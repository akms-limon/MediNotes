<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .navbar {
            background-color: #333;
            overflow: hidden;
            padding: 10px;
        }

        .navbar a {
            color: white;
            padding: 14px 20px;
            text-decoration: none;
            display: inline-block;
        }

        .navbar a:hover {
            background-color: #575757;
        }

        .navbar-right {
            float: right;
        }

        .main-content {
            margin: 20px auto;
            width: 80%;
            background-color: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, h2 {
            color: #333;
            text-align: center;
        }

        .profile-info {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .profile-info img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
        }

        .profile-details {
            flex-grow: 1;
            padding-left: 20px;
        }

        .profile-details p {
            margin: 5px 0;
            font-size: 16px;
        }

        .button {
            padding: 8px 15px;
            font-size: 14px;
            color: white;
            background-color: #4CAF50;
            border: none;
            cursor: pointer;
        }

        .button:hover {
            background-color: #45a049;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <div class="navbar">
        <a href="#">Profile</a>
        <a href="/medical-history">Medical History</a>
        <a href="/request-appoinment">Request Appointments</a>
        <div class="navbar-right">
            <a href="/" onclick="logout()">Logout</a>
        </div>
    </div>

    <!-- Main Content Section -->
    <div class="main-content">
        <h1>Welcome to Your Dashboard, Patient</h1>

        <!-- Profile Info Section -->
        <div class="profile-info">
            <img src="../public/image/profile.jpeg" alt="Profile Picture"> <!-- Replace with actual profile picture -->
            <div class="profile-details">
                <p><strong>Patient ID:</strong> P123456</p>
                <p><strong>Weight:</strong> 80kg</p>
                <p><strong>Height:</strong> 175cm</p>
                <p><strong>Age:</strong> 23</p>
                <p><strong>Gender:</strong> Male</p>
            </div>
            <button class="button" onclick="editProfile()">Edit Profile</button>
        </div>

        <div class="section">
            <h2>Your Upcoming Appointments</h2>
            <table>
                <thead>
                    <tr>
                        <th>Doctor Name</th>
                        <th>Appointment Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Dr. Sarah Williams</td>
                        <td>2025-02-15</td>
                        <td>Confirmed</td>
                    </tr>
                    <tr>
                        <td>Dr. John Doe</td>
                        <td>2025-02-20</td>
                        <td>Pending</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Medical Report Portal. All Rights Reserved.</p>
    </footer>


    <script>
        function logout() {
            alert("Logging out...");
            // Add functionality to log the user out
        }

        function editProfile() {
            alert("Redirecting to edit profile page.");
            // Add functionality to redirect to the edit profile page
        }
    </script>

</body>
</html>
