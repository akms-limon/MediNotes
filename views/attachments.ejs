<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attachments</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 50%; /* Reduced container width */
            margin: 20px auto;
            padding: 10px; /* Reduced padding */
            background-color: white;
            box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
        }
        .header {
            text-align: center;
            margin-bottom: 15px;
        }
        .attachments-table, .attachments-table th, .attachments-table td {
            width: 100%;
            border: 1px solid #ddd;
            border-collapse: collapse;
            padding: 6px; /* Reduced padding */
            text-align: left;
            font-size: 14px; /* Reduced font size */
        }
        .attachments-table th {
            background-color: #f2f2f2;
        }
        .attachments-table td {
            padding: 8px;
        }
        .attachments-table .actions {
            width: 160px; /* Reduced actions column width */
        }
        .button-container {
            display: flex;
            gap: 8px; /* Reduced gap */
        }
        .view-btn, .download-btn {
            padding: 5px 10px; /* Reduced button padding */
            font-size: 13px; /* Reduced button font size */
            cursor: pointer;
        }
        .view-btn {
            background-color: #4CAF50;
            color: white;
            border: none;
        }
        .view-btn:hover {
            background-color: #45a049;
        }
        .download-btn {
            background-color: #008CBA;
            color: white;
            border: none;
        }
        .download-btn:hover {
            background-color: #007B9E;
        }
        .add-btn {
            display: block;
            margin: 15px auto;
            padding: 8px 16px; /* Reduced button size */
            background-color: #f39c12;
            color: white;
            font-size: 14px; /* Reduced font size */
            border: none;
            cursor: pointer;
        }
        .add-btn:hover {
            background-color: #e67e22;
        }

        /* Modal (Popup) Styling */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 15px; /* Reduced padding */
            border: 1px solid #888;
            width: 35%; /* Reduced width */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .close {
            color: #aaa;
            font-size: 24px; /* Reduced close button size */
            font-weight: bold;
            float: right;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Attachments</h1>
        </div>

        <table class="attachments-table">
            <thead>
                <tr>
                    <th>Attachment Name</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Report_1.pdf</td>
                    <td class="button-container">
                        <button class="view-btn" onclick="viewAttachment('Report_1.pdf')">View</button>
                        <button class="download-btn" onclick="downloadAttachment('Report_1.pdf')">Download</button>
                    </td>
                </tr>
                <tr>
                    <td>Image_2.jpg</td>
                    <td class="button-container">
                        <button class="view-btn" onclick="viewAttachment('Image_2.jpg')">View</button>
                        <button class="download-btn" onclick="downloadAttachment('Image_2.jpg')">Download</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <button class="add-btn" onclick="openModal()">Add New Attachment</button>
    </div>

    <!-- Modal for Add New Attachment -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Upload New Attachment</h2>
            <form id="attachmentForm" enctype="multipart/form-data">
                <label for="attachmentName">Attachment Name:</label><br>
                <input type="text" id="attachmentName" name="attachmentName" required><br><br>
                
                <label for="fileUpload">Select File:</label><br>
                <input type="file" id="fileUpload" name="fileUpload" required><br><br>
                
                <button type="submit" class="add-btn">Upload</button>
            </form>
        </div>
    </div>

    <script>
        function viewAttachment(filename) {
            alert('Viewing ' + filename);
            // Replace this with your view functionality
        }

        function downloadAttachment(filename) {
            alert('Downloading ' + filename);
            // Replace this with your download functionality
        }

        function openModal() {
            document.getElementById("myModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("myModal").style.display = "none";
        }

        // Close modal if the user clicks anywhere outside of it
        window.onclick = function(event) {
            if (event.target == document.getElementById("myModal")) {
                closeModal();
            }
        }

        // Form submission logic (just prevent default for now)
        document.getElementById('attachmentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Attachment uploaded: ' + document.getElementById('attachmentName').value);
            closeModal();  // Close modal after submission
        });
    </script>
</body>
</html>
