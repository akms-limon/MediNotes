<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attachments</title>
    <link rel="stylesheet" href="/css/attachments.css">
</head>
<body>
    <!-- Navigation Bar -->

    <div class="container">
        <div class="header">
            <h1>Attachments</h1>
        </div>

        <table class="attachments-table">
            <thead>
                <tr>
                    <th>Attachment Name</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Report_1.pdf</td>
                    <td class="button-container">
                        <button class="view-btn" onclick="viewAttachment('Report_1.pdf')">View</button>
                        <button class="download-btn" onclick="downloadAttachment('Report_1.pdf')">Download</button>
                    </td>
                </tr>
                <tr>
                    <td>Image_2.jpg</td>
                    <td class="button-container">
                        <button class="view-btn" onclick="viewAttachment('Image_2.jpg')">View</button>
                        <button class="download-btn" onclick="downloadAttachment('Image_2.jpg')">Download</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <button class="add-btn" onclick="openModal()">Add New Attachment</button>
    </div>

    <!-- Modal for Add New Attachment -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Upload New Attachment</h2>
            <form id="attachmentForm" enctype="multipart/form-data">
                <label for="attachmentName">Attachment Name:</label><br>
                <input type="text" id="attachmentName" name="attachmentName" required><br><br>
                
                <label for="fileUpload">Select File:</label><br>
                <input type="file" id="fileUpload" name="fileUpload" required><br><br>
                
                <button type="submit" class="add-btn">Upload</button>
            </form>
        </div>
    </div>

    <script>
        function viewAttachment(filename) {
            alert('Viewing ' + filename);
            // Replace this with your view functionality
        }

        function downloadAttachment(filename) {
            alert('Downloading ' + filename);
            // Replace this with your download functionality
        }

        function openModal() {
            document.getElementById("myModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("myModal").style.display = "none";
        }

        // Close modal if the user clicks anywhere outside of it
        window.onclick = function(event) {
            if (event.target == document.getElementById("myModal")) {
                closeModal();
            }
        }

        // Form submission logic (just prevent default for now)
        document.getElementById('attachmentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Attachment uploaded: ' + document.getElementById('attachmentName').value);
            closeModal();  // Close modal after submission
        });
    </script>
</body>
</html>