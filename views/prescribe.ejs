<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescribe</title>
    <link rel="stylesheet" href="/css/prescribe.css">
    <style>
        
    </style>
</head>
<body>
    <!-- nav -->
    <%- include('partials/doctorNavbar.ejs') %>
    <div class="container">
        <h1>Search Student</h1>
        <form id="searchForm">
            <input type="text" id="studentId" placeholder="Enter Student ID" required>
            <button type="submit">Search</button>
        </form>
        <div id="studentInfo" style="display: none;">
            <h2>Student Information</h2>
            <div class="info-container">
                <div class="info-section">
                    <h3>Basic Information</h3>
                    <p><strong>Name:</strong> <span id="studentName"></span></p>
                    <p><strong>Department:</strong> <span id="studentDepartment"></span></p>
                    <p><strong>Email:</strong> <span id="studentEmail"></span></p>
                    <p><strong>Phone:</strong> <span id="studentPhone"></span></p>
                </div>
                <div class="info-section">
                    <h3>Medical Information</h3>
                    <p><strong>Height:</strong> <span id="studentHeight"></span></p>
                    <p><strong>Weight:</strong> <span id="studentWeight"></span></p>
                    <p><strong>Blood Group:</strong> <span id="studentBloodGroup"></span></p>
                    <p><strong>Blood Pressure:</strong> <span id="studentBloodPressure"></span></p>
                    <p><strong>Allergies:</strong> <span id="studentAllergies"></span></p>
                    <p><strong>Medical Conditions:</strong> <span id="studentMedicalConditions"></span></p>
                </div>
            </div>
            <div class="action-buttons">
                <button onclick="viewMedicalHistory()">Medical History</button>
                <button onclick="prescribeNow()">Prescribe Now</button>
            </div>
        </div>
        <div id="errorMessage" style="display: none; color: red; margin-top: 20px;"></div>
    </div>

    <script>
        let currentStudentId = null;
        
        document.getElementById('searchForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const studentId = document.getElementById('studentId').value;
            currentStudentId = null;
            
            // Clear any previous error
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('studentInfo').style.display = 'none';
            
            // Fetch student data from server
            fetch(`/doctor/student/${studentId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log("Received data:", data); // Debug logging
                    
                    if (data.success) {
                        // Basic info
                        document.getElementById('studentName').innerText = data.student.name || 'Not available';
                        document.getElementById('studentDepartment').innerText = data.student.department || 'Not available';
                        document.getElementById('studentEmail').innerText = data.student.email || 'Not available';
                        document.getElementById('studentPhone').innerText = data.student.phone || 'Not available';
                        
                        // Medical info
                        document.getElementById('studentHeight').innerText = data.student.height;
                        document.getElementById('studentWeight').innerText = data.student.weight;
                        document.getElementById('studentBloodGroup').innerText = data.student.bloodGroup;
                        document.getElementById('studentBloodPressure').innerText = data.student.bloodPressure;
                        document.getElementById('studentAllergies').innerText = data.student.allergies;
                        document.getElementById('studentMedicalConditions').innerText = data.student.medicalConditions;
                        
                        document.getElementById('studentInfo').style.display = 'block';
                        currentStudentId = data.student.id;
                    } else {
                        throw new Error(data.error || "Failed to retrieve student data");
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('errorMessage').textContent = error.message || "Student not found or an error occurred";
                    document.getElementById('errorMessage').style.display = 'block';
                });
        });

        function viewMedicalHistory() {
            if (currentStudentId) {
                window.location.href = `/student/medical-history?studentId=${currentStudentId}`;
            }
        }

        function prescribeNow() {
            if (currentStudentId) {
                window.location.href = `/doctor/create-prescription?studentId=${currentStudentId}`;
            }
        }
    </script>
</body>
</html>
